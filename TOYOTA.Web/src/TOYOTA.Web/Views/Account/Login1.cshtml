@{
    Layout = "_LayoutOfPop";
    ViewData["Title"] = "Login";
}

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            @*$("#btnLogin").click(function () {
                $.sa.get(LOGIN_URL,
                        {
                            UserName: $("#inputUserID").text(),
                            Password: $("#inputPassword").text()
                        },
                        {
                            "success": function (data) {
                                location.href = '@Url.Action("Index","Home")';
                            },
                            "failure": function (data) {
                                alert(data.msg);
                            }
                        }, $("body"));
            });*@
            $("#btnReset").click(function () {
                $("#inputUserID").val("");
                $("#inputPassword").val("");
            });
        });
    </script>
}

<div class="wrapper linear">
    <div class="container-fluid" style="position: fixed; top: 35%; width: 100%; z-index: 97;">
        <div class="row">
            <div class="col-md-3 col-md-offset-4">
                <div class="row">
                    <div class="col-md-6">
                        &nbsp;
                    </div>
                    <div class="col-md-12" style="margin-bottom:10px">
                        <span style="color: Red; float: right; clear: both;">@ViewBag.ErrorLoginMessage</span>
                    </div>
                </div>
                <div class="row" style="min-width: 350px;">
                    @using (Html.BeginForm("login", "Account", new { }, FormMethod.Post, true, new { @class = "form-horizontal", @role = "form" }))
                    {
                        <div class="form-group">
                            <div class="col-md-4 col-sm-2 col-xs-2">
                                <img class="pull-right" src="~/images/Login/user.png" />
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.TextBox("inputUserID", "", new { @class = "form-control", placeholder = "Login" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-sm-2 col-xs-2">
                                <img class="pull-right" src="~/images/Login/password.png" />
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.Password("inputPassword", "", new { @class = "form-control", placeholder = "Password" })
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-8 col-sm-offset-2 col-sm-8">
                                    <button id="btnLogin" type="submit" class="btn btn-success col-md-5 col-sm-3 col-xs-3">
                                        登 录
                                    </button>
                                    <button id="btnReset" type="reset" class="btn col-md-offset-2 col-sm-offset-1 col-md-5 col-sm-3 col-xs-3">
                                        重 置
                                    </button>
                                </div>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="navbar-fixed-bottom">
        <div style="text-align: center;">
            copyright elandsystems
        </div>
    </div>
</div>
